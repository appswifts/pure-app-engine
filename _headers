# Global security headers
/*
  X-Frame-Options: DENY
  X-Content-Type-Options: nosniff
  X-XSS-Protection: 1; mode=block
  Referrer-Policy: strict-origin-when-cross-origin
  Permissions-Policy: camera=(), microphone=(), geolocation=()
  Content-Security-Policy: default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://cdn.jsdelivr.net https://unpkg.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https: blob:; connect-src 'self' https://*.supabase.co wss://*.supabase.co https://pollinations.ai; frame-ancestors 'none';

# Cache static assets (JS, CSS) - 1 year with immutable
/assets/*
  Cache-Control: public, max-age=31536000, immutable
  
/*.js
  Cache-Control: public, max-age=31536000, immutable
  
/*.css
  Cache-Control: public, max-age=31536000, immutable

# Cache fonts - 1 year with immutable
/*.woff
  Cache-Control: public, max-age=31536000, immutable
  
/*.woff2
  Cache-Control: public, max-age=31536000, immutable
  
/*.ttf
  Cache-Control: public, max-age=31536000, immutable

# Cache images - 30 days
/*.jpg
  Cache-Control: public, max-age=2592000, s-maxage=2592000
  
/*.jpeg
  Cache-Control: public, max-age=2592000, s-maxage=2592000
  
/*.png
  Cache-Control: public, max-age=2592000, s-maxage=2592000
  
/*.webp
  Cache-Control: public, max-age=2592000, s-maxage=2592000
  
/*.svg
  Cache-Control: public, max-age=2592000, s-maxage=2592000

# Cache HTML - short cache for updates
/*.html
  Cache-Control: public, max-age=3600, s-maxage=3600, must-revalidate
  
/
  Cache-Control: public, max-age=3600, s-maxage=3600, must-revalidate

# Cache JSON data - 1 hour
/*.json
  Cache-Control: public, max-age=3600, s-maxage=3600

# Don't cache service worker
/sw.js
  Cache-Control: no-cache, no-store, must-revalidate

# API routes - no cache
/api/*
  Cache-Control: no-cache, no-store, must-revalidate
